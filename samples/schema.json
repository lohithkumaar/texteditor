{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/text-tools-schema.json",
  "title": "Text Tools Demo JSON Schema",
  "description": "Schema for validating the Text Tools demo JSON structure",
  "type": "object",
  "required": ["name", "version", "author"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "The name of the application"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version number"
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "author": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "profile": {
          "type": "object",
          "properties": {
            "age": {
              "type": "integer",
              "minimum": 0,
              "maximum": 120
            },
            "location": {
              "type": "string",
              "maxLength": 100
            },
            "interests": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "maxItems": 10
            }
          }
        }
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "enabled"],
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 1
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "enabled": {
            "type": "boolean"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          }
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "auto"]
        },
        "auto_save": {
          "type": "boolean"
        },
        "notifications": {
          "type": "object",
          "properties": {
            "email": {
              "type": "boolean"
            },
            "push": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "size_kb": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  }
}